<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/accent"
    tools:context=".Dashboard">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_r"
                android:text="Bin Buddy"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_r"
                android:text="Black bin"
                android:textSize="25sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/cal_black"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="-40dp"
                android:fontFamily="@font/montserrat_r" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-60dp"
                android:src="@drawable/ic_bin"
                app:tint="@color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_r"
                android:text="Black bin"
                android:textSize="25sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/cal_blue"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="-40dp"
                android:fontFamily="@font/montserrat_r"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-60dp"
                android:src="@drawable/ic_bin"
                app:tint="@color/blue" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_r"
                android:text="Brown bin"
                android:textSize="25sp"
                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/cal_brown"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="-40dp"
                android:fontFamily="@font/montserrat_r"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-60dp"
                android:src="@drawable/ic_bin"
                app:tint="@color/brown" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <!-- TextView to show the scanned QR code result -->
            <TextView
                android:id="@+id/scannedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scanned QR code will appear here"
                android:textSize="18sp"
                android:layout_marginStart="50dp"
                android:paddingTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:padding="16dp">

            <Button
                android:id="@+id/btn_Games"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/button"
                android:fontFamily="@font/montserrat_r"
                android:text="Games"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_scanner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/button"
                android:fontFamily="@font/montserrat_r"
                android:text="Scanner"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_maps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/button"
                android:fontFamily="@font/montserrat_r"
                android:text="Maps"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_Settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/button"
                android:fontFamily="@font/montserrat_r"
                android:text="Settings"
                android:textSize="18sp" />

            </GridLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>